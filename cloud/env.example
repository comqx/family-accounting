# 微信云托管环境变量配置
# ================================

# 服务配置
NODE_ENV=production
PORT=80

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 微信云托管系统变量（自动注入，无需手动设置）
# MYSQL_ADDRESS=mysql-host:3306
# MYSQL_USERNAME=your-mysql-username
# MYSQL_PASSWORD=your-mysql-password
# COS_BUCKET=your-cos-bucket-name
# COS_REGION=your-cos-region

# 数据库配置（开发环境使用，生产环境使用上面的系统变量）
DB_HOST=localhost
DB_PORT=3306
DB_NAME=family_accounting
DB_USER=family_user
DB_PASSWORD=family_pass_2024

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 微信小程序配置
WECHAT_APPID=wx96846083348c49aa
WECHAT_SECRET=your-wechat-app-secret

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 安全配置
CORS_ORIGIN=https://servicewechat.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OCR 服务配置（可选）
OCR_API_KEY=your-ocr-api-key
OCR_API_URL=https://api.ocr.com/v1/recognize 