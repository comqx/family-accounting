{
  "name": "family-accounting-cloud",
  "version": "1.0.0",
  "description": "家账通云托管后端服务",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:with-init": "./start.sh",
    "dev": "nodemon index.js",
    "build": "echo 'No build step needed'",
    "test": "echo 'No tests specified' && exit 0",
    "test:startup": "./test-startup.sh",
    "test:env-vars": "./test-env-vars.sh",
    "db:init": "node scripts/db-manager.js init",
    "db:status": "node scripts/db-manager.js status",
    "db:reset": "node scripts/db-manager.js reset",
    "db:backup": "node scripts/db-manager.js backup",
    "db:restore": "node scripts/db-manager.js restore",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:full": "npm run docker:up && sleep 10 && npm run db:status",
    "test:db": "node scripts/test-db.js",
    "docker:build": "docker build -t family-accounting-cloud .",
    "docker:run": "docker run -p 3000:80 --env-file .env family-accounting-cloud"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mysql2": "^3.6.5",
    "redis": "^4.6.10",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "joi": "^17.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "wechat",
    "cloud",
    "miniprogram",
    "family",
    "accounting"
  ],
  "author": "Family Accounting Team",
  "license": "MIT"
} 